  <Button
      android:id="@+id/display_btn"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="0dp"
      android:layout_marginStart="0dp"
      android:alpha="0"
      android:visibility="visible"
      ></Button>
  <Button
      android:id="@+id/display_btn2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="0dp"
      android:layout_marginStart="0dp"
      android:alpha="0"
      android:visibility="visible"
      ></Button>
  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/touchArea"
      android:background="@color/black">
  </View>
  <TextView
      android:id="@+id/InitializeText"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="-800dp"
      android:gravity="center"
      android:textColor="@color/white"
      android:textSize="15sp"
      android:text="앱의 초기화면입니다. 한 번 터치해서 시작해주세요.\n
      * 리셋방법 : 오른쪽 모서리에 숨겨진 버튼을 10초 눌러 끄기 -> Riverside 재실행.\n
      * 앱을 재실행하면 뜨는 메시지창에서 '확인' 눌러주세요.\n
        홈버튼, 뒤로가기, 상단바를 막아줍니다."
      android:visibility="visible">
  </TextView>

  <VideoView
      android:id="@+id/videoView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="0dp"
      android:layout_marginStart="0dp"
      android:visibility="invisible">
  </VideoView>
  <VideoView
      android:id="@+id/videoView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="0dp"
      android:layout_marginStart="0dp"
      android:visibility="invisible">
  </VideoView>

  <ImageView
      android:id="@+id/firstThought"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="220dp"
      android:layout_marginStart="10dp"
      android:src="@drawable/a1"
      android:visibility="invisible"
      android:background="@android:color/transparent">
  </ImageView>
  <ImageView
      android:id="@+id/secondThought"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="200dp"
      android:layout_marginStart="-30dp"
      android:src="@drawable/a2"
      android:visibility="invisible"
      android:background="@android:color/transparent">
  </ImageView>
  <ImageView
      android:id="@+id/thirdThought"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="210dp"
      android:src="@drawable/a3"
      android:layout_marginStart="-23dp"
      android:visibility="invisible"
      android:background="@android:color/transparent">
  </ImageView>

  <Button
      android:id="@+id/jung_letter_btn"
      android:layout_width="50dp"
      android:layout_height="80dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="496dp"
      android:layout_marginStart="440dp"
      android:width="10dp"
      android:alpha="0"
      ></Button>
  <Button
      android:id="@+id/ji_letter_btn"
      android:layout_width="50dp"
      android:layout_height="80dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="502dp"
      android:layout_marginStart="595dp"
      android:width="10dp"
      android:alpha="0"
      ></Button>

  <ImageView
      android:src="@drawable/raindrop"
      android:id="@+id/raindrop"
      android:layout_width="40dp"
      android:layout_height="60dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginStart="300dp"
      android:visibility="invisible">
  </ImageView>

  <ImageView
      android:id="@+id/controlpanel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginLeft="-40dp"
      android:src="@drawable/control_panel"
      android:visibility="invisible">
  </ImageView>

  <ImageView
      android:id="@+id/controlpanel_bell"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginLeft="-40dp"
      android:src="@drawable/control_panel_bell_on"
      android:visibility="invisible">
  </ImageView>
  <Button
      android:id="@+id/bell_btn"
      android:layout_width="100dp"
      android:layout_height="120dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="680dp"
      android:layout_marginStart="320dp"
      android:width="10dp"
      android:alpha="0"
      ></Button>



