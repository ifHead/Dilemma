  <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/touchArea"
      android:background="@color/black">
  </View>
  <TextView
      android:id="@+id/InitializeText"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:gravity="center"
      android:textColor="@color/white"
      android:textSize="20sp"
      android:text="앱 초기화면입니다\n\n아무 곳이나 '한 번' 터치하여\n플레이 모드로 진입해주세요\n\n실수로 여러 번 터치하면\n감상이 진행됩니다"
      android:visibility="visible">
  </TextView>

  <VideoView
      android:id="@+id/videoView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="0dp"
      android:layout_marginStart="0dp"
      android:visibility="invisible">
  </VideoView>

  <ImageView
      android:id="@+id/firstThought"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="220dp"
      android:layout_marginStart="10dp"
      android:src="@drawable/a1"
      android:visibility="invisible"
      android:background="@android:color/transparent">
  </ImageView>
  <ImageView
      android:id="@+id/secondThought"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="200dp"
      android:layout_marginStart="-30dp"
      android:src="@drawable/a2"
      android:visibility="invisible"
      android:background="@android:color/transparent">
  </ImageView>
  <ImageView
      android:id="@+id/thirdThought"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginBottom="210dp"
      android:src="@drawable/a3"
      android:layout_marginStart="-23dp"
      android:visibility="invisible"
      android:background="@android:color/transparent">
  </ImageView>

  <Button
      android:id="@+id/jung_letter_btn"
      android:layout_width="50dp"
      android:layout_height="80dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="496dp"
      android:layout_marginStart="440dp"
      android:width="10dp"
      android:alpha="0"
      ></Button>
  <Button
      android:id="@+id/ji_letter_btn"
      android:layout_width="50dp"
      android:layout_height="80dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginTop="502dp"
      android:layout_marginStart="595dp"
      android:width="10dp"
      android:alpha="0"
      ></Button>

